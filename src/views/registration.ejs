<%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/styles/registration.css" />
  </head>
  <body>
    <main>
      <img
        class="side_img"
        src="/images/coffee-login.jpg"
        srcset="
          /images/man-pouring-coffee-into-mug-small.jpg  480w,
          /images/coffee-login.jpg                      1200w
        "
        sizes="(max-width: 600px) 480px, 1200px"
        alt="A man pouring coffee into a mug"
        title="Pouring freshly brewed coffee"
        loading="lazy"
      />

      <div class="form_container">
        <h1>Welcome back to Coffee Shop</h1>
        <%- error ? `
        <p class="error">${error}</p>
        ` : `
        <p>
          Sign up to enjoy our freshly brewed coffee and exclusive member
          benefits.
        </p>
        ` %>
        <form action="/registration" method="POST">
          <input
            type="text"
            name="name"
            id="name"
            autocomplete="name"
            placeholder="Your name"
            value="<%= props ? props.name : '' %>"
            required
          />
          <div class="email">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              value="<%= props ? props.email : '' %>"
              placeholder="Your email"
              required
            />
            <p class="error">Please provide a valid email.</p>
          </div>
          <div class="password">
            <input
              type="password"
              name="password"
              id="password"
              autocomplete="new-password"
              placeholder="Password"
              value="<%= props ? props.password : '' %>"
              minlength="6"
              maxlength="12"
              required
            />
            <p class="error">Password must be at least 6 characters.</p>
          </div>
          <div class="confirm_password">
            <input
              type="password"
              name="confirm_password"
              id="confirm_password"
              autocomplete="new-password"
              placeholder="Confirm password"
              value="<%= props ? props.confirm_password : '' %>"
              minlength="6"
              maxlength="12"
              required
            />
            <p class="error">Password must be at least 6 characters.</p>
          </div>
          <input type="file" name="imageUrl" id="imageUrl" />
          <button type="submit">Register Now</button>
          <p>Already have an account? <a href="/login">Login</a></p>
        </form>
      </div>
    </main>
  </body>
</html>
